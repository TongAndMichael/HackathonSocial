<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome: "
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_game1"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:onClick="onClickGame1"
        android:text="Game1" />

    <Button
        android:id="@+id/btn_Game2"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_game1"
        android:layout_below="@+id/btn_game1"
        android:layout_marginTop="61dp"
        android:onClick="onClickGame2"
        android:text="Game2" />

    <Button
        android:id="@+id/btn_post"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Game2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:onClick="onClickPost"
        android:text="Post Something" />

    <Button
        android:id="@+id/btn_leaderboard"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_post"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:text="LeaderBoard"
        android:onClick="onClickLeaderboard"/>

</RelativeLayout>